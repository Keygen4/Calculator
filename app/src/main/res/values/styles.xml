<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="DefaultButtonStyle" >
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/baseButtonColor</item>
        <item name="layout_constraintHorizontal_weight">@dimen/defaultButtonWeights</item>
        <item name="layout_constraintVertical_weight">@dimen/defaultButtonWeights</item>
        <item name="android:layout_width">@dimen/defaultButtonSize</item>
        <item name="android:layout_height">@dimen/defaultButtonSize</item>
    </style>

    <style name="DefaultButtonStyle.Action">
        <item name="android:textColor">@color/actionButtonTextColor</item>
    </style>


    <style name="DefaultButtonStyle.Answer">
        <item name="android:textSize">@dimen/answerTextSize</item>
        <item name="android:gravity">bottom|end</item>
        <item name="backgroundTint">@color/answerBackground</item>
        <item name="layout_constraintVertical_weight">@dimen/answerVerticalWeight</item>
    </style>





    <style name="DarkButtonStyle" >
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/darkButtonColor</item>
        <item name="layout_constraintHorizontal_weight">@dimen/defaultButtonWeights</item>
        <item name="layout_constraintVertical_weight">@dimen/defaultButtonWeights</item>
        <item name="android:layout_width">@dimen/defaultButtonSize</item>
        <item name="android:layout_height">@dimen/defaultButtonSize</item>
    </style>

    <style name="DarkButtonStyle.Action">
        <item name="android:textColor">@color/actionButtonTextColor</item>
    </style>


    <style name="DarkButtonStyle.Answer">
        <item name="android:textSize">@dimen/answerTextSize</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:background">@color/coal</item>
        <item name="layout_constraintVertical_weight">@dimen/answerVerticalWeight</item>
    </style>

</resources>